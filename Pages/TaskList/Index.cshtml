@page
@model ToDoApplication.Pages.TaskList.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Task List</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ToDoItem[0].Title)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.ToDoItem[0].IsCompleted)
            </th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.ToDoItem != null && Model.ToDoItem.Any())
        {
            @foreach (var item in Model.ToDoItem)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.IsCompleted)
                    </td>
                    <td class="text-center">
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
            {
            <tr>
                <td colspan="4" class="text-center">
                    No Task Available
                </td>
            </tr>
        }
            </tbody>
</table>
