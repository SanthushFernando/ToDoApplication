@page
@model ToDoApplication.Pages.TaskList.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Task</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ToDoItem.Title" class="control-label"></label>
                <input asp-for="ToDoItem.Title" class="form-control" />
                <span asp-validation-for="ToDoItem.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDoItem.IsCompleted" class="control-label"></label>
                <input asp-for="ToDoItem.IsCompleted" class="form-control" />
                <span asp-validation-for="ToDoItem.IsCompleted" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-warning">Back to List</a>
            </div>

        </form>
        
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
